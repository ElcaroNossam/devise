<h1 class="text-center mt-4"><%= @user.name %>'s Profile!</h1>

<%= gravatar_for @user, size: 200 %>

<% if  user_signed_in? || current_user && @user && current_user.has_role?(:admin) %>
  <div class="text-center mt-4">
     <%= link_to "Edit your profile", edit_user_registration_path(@user), class: "btn btn-outline-info" %>
       <%= link_to "Delete profile", user_registration_path, class: "btn btn-outline-danger", method: :delete,
                data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
 </div>
   <div class="container">
      <h3 class="text-center mt-4">Записи:</h3>
      <%= render 'appointments/appointment' %>
   </div>
<% end %>



